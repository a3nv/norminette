<idea-plugin>
    <id>com.samkortekaas.norminette</id>
    <name>Norminette</name>
    <vendor>skrtks</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.clion</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.cidr.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.skrtks.norminette.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.skrtks.norminette.services.MyProjectService"/>
    </extensions>

    <extensions defaultExtensionNs="cidr.lang">
        <standaloneInspectionToolProvider implementation="norminette.inspections.NorminetteInspectionProvider"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.skrtks.norminette.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
